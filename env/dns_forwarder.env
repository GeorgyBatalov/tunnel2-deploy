# DNS Forwarder Configuration for Docker environment

# DNS Server Configuration
DnsForwarder__ListenIpv4=0.0.0.0
DnsForwarder__UdpPort=53
DnsForwarder__TcpPort=53
DnsForwarder__UpstreamDnsAddress=dns_server
DnsForwarder__UpstreamDnsPort=53
DnsForwarder__UpstreamTimeoutSeconds=5
DnsForwarder__UpstreamRetryCount=2

# Cache Configuration
Cache__IsEnabled=true
Cache__MaxPositiveCacheTtlSeconds=300
Cache__NegativeCacheTtlSeconds=60
Cache__MaxCacheSize=10000
Cache__AbsoluteCacheExpirationSeconds=3600

# Rate Limiting Configuration
RateLimit__IsEnabled=true
RateLimit__MaxRequestsPerIp=1000
RateLimit__TimeWindowSeconds=60
RateLimit__MaxTrackedIps=100000

# Logging Configuration
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft=Warning
Logging__LogLevel__Microsoft.Hosting.Lifetime=Information
